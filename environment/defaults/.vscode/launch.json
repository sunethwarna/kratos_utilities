{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Python Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "<PYTHON_VENV_PATH>/<KRATOS_ENVIRONMENT_NAME>_${command:cpptools.activeConfigName}/bin/python",
            "args": [
                "${file}"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "OMP_NUM_THREADS",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Cpp Launch (Latest)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${command:cpptools.activeConfigName}/test/${input:TestSuiteName}",
            "args": [
                "--gtest_filter=\"${input:TestNamePattern}\""
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "OMP_NUM_THREADS",
                    "value": "1"
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "<PYTHON_VENV_PATH>/<KRATOS_ENVIRONMENT_NAME>_${command:cpptools.activeConfigName}/<SITE_PACKAGES_POSTFIX>/libs"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "TestSuiteName",
            "type": "command",
            "command": "memento.promptString",
            "args": {
                "id": "TestSuiteName",
                "description": "Test suite name",
                "default": ""
            }
        },
        {
            "id": "TestNamePattern",
            "type": "command",
            "command": "memento.promptString",
            "args": {
                "id": "TestNamePattern",
                "description": "Test name pattern",
                "default": ""
            }
        }
    ]
}